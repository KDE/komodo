{
    "id": "org.kde.komodo",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.10",
    "sdk": "org.kde.Sdk",
    "command": "komodo",
    "tags": [
        "nightly"
    ],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "cleanup": [
        "*.a",
        "*.la",
        "/doc",
        "/docs",
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/lib/x86_64-linux-gnu/cmake",
        "/lib/x86_64-linux-gnu/pkgconfig",
        "/man",
        "/share/cmake",
        "/share/doc",
        "/share/man",
        "/share/pkgconfig"
    ],
    "modules": [
        {
            "name": "komodo",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}
